#ifndef TELLER_H_
#define TELLER_H_

#include <malloc.h>
#include <signal.h>
#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <pthread.h>

// STRUCTS
typedef struct {
	int available;
	int break_number;
	int break_time;
	pthread_t id;
} Teller;

// PROTOTYPES
void create_teller_threads();
void *teller_thread(void *arg);


#endif /* TELLER_H_ */
